-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Oscillare, Osc, Pattern, Program, Runner, Server, State, Uniform
  build-depends: aeson >=0.10.0
               , base >= 4.7 && < 5
               , base-prelude
               , bytestring >= 0.10
               , containers >= 0.5
               , hosc >= 0.15
               , lens >= 4.13
               , mtl
               , network >= 2.6
               , parsec
               , random
               , resourcet
               , split
               , text >= 1.2
               , time
               , transformers
               , vector >= 0.11
               , wai >= 3.2.1.1
               , wai-app-static
               , wai-websockets
               , warp
               , websockets
  default-language:    Haskell2010

executable test
  hs-source-dirs:      app
  main-is: Main.hs
  default-language:    Haskell2010
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends: base
               , oscillare
  

source-repository head
  type:     git
  location: https://github.com/ulyssesp/oscillare
